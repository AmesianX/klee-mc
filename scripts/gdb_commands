define saveregs
	set pagination off
	shell rm -f gdb.regs
	shell rm -f gdb.threads
	set logging file gdb.regs
	set logging on
	info registers
	set logging off

	set logging file gdb.threads
	set logging on
	info threads 
	set logging off
end


define stat_scan
	b main
	run
	b _xstat
	c
	scan
	c
	c
end

define concretize
	signal SIG95
end

# step branch.
# takes us up to the branch
define sb
	signal SIG98
end

# step-false
define sf
	signal SIG97
end

# step-true
define st
	signal SIG96
end

define scan_blocked
	saveregs
	detach
	shell /home/chz/klee-trunk/scripts/scan_blocked.sh
	target remote :55555
end

define scan_retry
	shell /home/chz/klee-trunk/scripts/scan_retry.sh
	target remote :55555
end

define scan
	saveregs
	shell /home/chz/klee-trunk/scripts/scan_suspend.sh
	detach
	shell /home/chz/klee-trunk/scripts/scan_launch.sh
	target remote :55555
end